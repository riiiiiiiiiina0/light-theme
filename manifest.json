{
  "manifest_version": 3,
  "name": "Sunny Bear",
  "version": "2.3.0",
  "description": "Transforms dark websites into bright, readable pages, perfect for sunny days and clear bear sightings.",
  "icons": {
    "16": "icons/icon-dark-16x16.png",
    "32": "icons/icon-dark-32x32.png",
    "48": "icons/icon-dark-48x48.png",
    "128": "icons/icon-dark-128x128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_icon": {
      "48": "icons/icon-dark-48x48.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "storage.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
